--- a/bin/omarchy-launch-webapp
+++ b/bin/omarchy-launch-webapp
@@ -4,7 +4,23 @@
 
 case $browser in
 google-chrome* | brave-browser* | microsoft-edge* | opera* | vivaldi*) ;;
-*) browser="chromium.desktop" ;;
+*) 
+  # Check if we're on ARM architecture and use Firefox instead of Chromium
+  arch=$(uname -m)
+  if [[ "$arch" == "aarch64" || "$arch" == "arm64" ]] && [[ -f "/usr/share/applications/firefox.desktop" ]]; then
+    browser="firefox.desktop"
+  else
+    browser="chromium.desktop"
+  fi
+  ;;
 esac
 
-exec setsid uwsm app -- $(sed -n 's/^Exec=\([^ ]*\).*/\1/p' {~/.local,/usr}/share/applications/$browser 2>/dev/null | head -1) --app="$1" "${@:2}"
+browser_exec=$(sed -n 's/^Exec=\([^ ]*\).*/\1/p' {~/.local,/usr}/share/applications/$browser 2>/dev/null | head -1)
+
+# Handle Firefox differently since it doesn't support --app flag the same way
+if [[ "$browser" == "firefox.desktop" ]]; then
+  # For Firefox, use --new-window to open in a dedicated window
+  exec setsid uwsm app -- "$browser_exec" --new-window "$1" "${@:2}"
+else
+  # For Chromium-based browsers, use --app flag
+  exec setsid uwsm app -- "$browser_exec" --app="$1" "${@:2}"
+fi
